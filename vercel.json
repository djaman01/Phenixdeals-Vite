//I've changed the domain name; so i've added the "redirects" rule to redirect the old domain to the new one / permanent: true makes it a 301 redirect / /$1 matches everything after the domain name/...
{
  "redirects": [
    {
      "source": "/(.*)",
      "destination": "https://phenixdeals.com/$1",
      "has": [
        {
          "type": "host",
          "value": "phenix-deals.com"
        }
      ],
      "permanent": true
    }
  ],
  "rewrites": [
    {
      "source": "/sitemap.xml",
      "destination": "https://phenixdeals-back.onrender.com/sitemap.xml"
    },
    {
      "source": "/(.*)",
      "destination": "/index.html"
    }
  ],
  "headers": [
    {
      "source": "/sitemap.xml",
      "headers": [
        {
          "key": "Content-Type",
          "value": "application/xml"
        }
      ]
    }
  ]
}
